{
  "name": "@logguer/logguer",
  "version": "0.0.1",
  "description": "The modern logging solution for React applications.",
  "scripts": {
    "clean": "rimraf dist",
    "build": "pnpm clean && pnpm build:js && pnpm build:ts",
    "build:js": "node scripts/build.js",
    "build:ts": "pnpm tsc --emitDeclarationOnly",
    "test": "vitest --run",
    "test:watch": "vitest",
    "release": "pnpm build && npm publish"
  },
  "types": "./dist/types/index.d.ts",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "packageManager": "pnpm@9.14.2",
  "devDependencies": {
    "@cspell/eslint-plugin": "^8.17.1",
    "@eslint-react/eslint-plugin": "^1.22.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/eslint": "^9.6.1",
    "@types/react": "^19.0.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "esbuild": "^0.24.2",
    "eslint": "^9.17.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "jsdom": "^25.0.1",
    "prettier": "^3.4.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.2",
    "vitest": "^2.1.8"
  },
  "peerDependencies": {
    "react": "^17",
    "react-dom": "^17"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/logguer/logguer.git"
  },
  "author": "stakbucks",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/logguer/logguer/issues"
  },
  "homepage": "https://github.com/logguer/logguer#readme",
  "keywords": [
    "react",
    "analytics",
    "google-analytics",
    "amplitude",
    "logger"
  ]
}
